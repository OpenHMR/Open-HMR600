	$(MAKE) -C $(KSRC) M=$(PWD)  modules
.PHONY: modules clean
clean:
	rm -fr *.mod.c *.mod *.o .*.cmd *.ko *~
	cd cmd ; rm -fr *.mod.c *.mod *.o .*.cmd *.ko 
	cd crypto ; rm -fr *.mod.c *.mod *.o .*.cmd *.ko 
